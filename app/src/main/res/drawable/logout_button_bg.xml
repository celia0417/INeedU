<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            <solid
                android:color="#FF8A80" />
            <stroke
                android:width="1dp"
                android:color="#B71C1C" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF8A80"
                android:endColor="#B71C1C"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#B71C1C" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>